{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // dont spellcheck emoji shortcodes in *.md
  "spellright.ignoreRegExpsByClass": {
    "markdown": ["/:\\w+:/g", "/&mdash;/g"]
  },
  "spellright.language": [
    "en"
  ],
  "spellright.documentTypes": [
    "latex",
    "plaintext",
    "markdown"
  ],
}